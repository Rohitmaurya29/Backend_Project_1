extends layout

block content
    form(action="/login" method="post")
        .whole 
            .login  
                <i>Login here</i>
            <hr>
            .label 
                label(for="mail") Enter Your email 
            .input 
                input.text(id="mail" type="email" name="mail" required)

            .label 
                label(for="password") Enter Your Password 
            .input 
                input.text(id="password" type="password" name="password" required)

            .button 
                button.submit(type="submit") Submit

